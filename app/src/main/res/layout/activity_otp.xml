<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#446455"
    android:layout_height="match_parent"
    tools:context=".Activity_otpotp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#436354">
    <TextView
        android:id="@+id/textView9"
        android:layout_width="764dp"
        android:layout_height="55dp"
        android:background="#1B3A2C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="766dp"
        android:layout_height="227dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="4dp"
        android:background="#709281"
        android:textSize="120sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="373dp"
            android:layout_height="367dp"
            android:background="#FFFFFF"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivGoHome"
            app:layout_constraintHorizontal_bias="0.641"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintVertical_bias="0.013" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="373dp"
            android:layout_height="52dp"
            android:layout_marginTop="92dp"
            android:background="#C7CC00"
            android:gravity="center"
            android:text="     2차 인증 OTP"
            android:textAlignment="textStart"
            android:textColor="#1B3A2C"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/ivGoBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintVertical_bias="0.078" />

        <com.view.circulartimerview.CircularTimerView
        android:id="@+id/progress_circular"
        android:layout_width="86dp"
        android:layout_height="80dp"
        app:backgroundColor="#446455"
        app:backgroundWidth="8"
        app:isClockwise="true"
        app:layout_constraintBottom_toTopOf="@+id/btnOtpSend"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/secondPinView"
        app:layout_constraintVertical_bias="0.666"
        app:maxValue="100"
        app:prefix="Time "
        app:progressBackgroundColor="#446455"
        app:progressColor="#ffff00"
        app:progressText="Time Remaining..."
        app:progressTextColor="#ffff5a"
        app:startingPoint="bottom"
        app:suffix=" 초"
        app:textSize="10sp" />

    <com.chaos.view.PinView
        android:id="@+id/secondPinView"
        style="@style/PinWidget.PinView"
        android:layout_width="324dp"
        android:layout_height="61dp"
        android:layout_marginBottom="108dp"
        android:hint="123456"
        android:inputType="number"
        android:itemBackground="@mipmap/ic_launcher"
        android:padding="@dimen/common_padding"
        android:textColor="#C7CC00"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cursorColor="#FFFF00"
        app:cursorWidth="2dp"
        app:itemCount="5"
        app:itemHeight="48dp"
        app:itemRadius="4dp"
        app:itemSpacing="0dp"
        app:itemWidth="48dp"
        app:layout_constraintBottom_toTopOf="@+id/btnOtpSend"
        app:layout_constraintEnd_toStartOf="@+id/ivGoHome"
        app:layout_constraintStart_toEndOf="@+id/ivGoBack"
        app:layout_constraintTop_toTopOf="@+id/textView12"
        app:lineColor="#446455"
        app:lineWidth="2dp"
        app:viewType="rectangle" />

    <ImageView
        android:id="@+id/btnOtpSend"
        android:layout_width="96dp"
        android:layout_height="72dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="118dp"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/textView12"
        app:srcCompat="@drawable/send_logo2" />

        <TextView
            android:id="@+id/tvrRechance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재전송"
            app:layout_constraintBottom_toTopOf="@+id/btnOtpSend"
            app:layout_constraintEnd_toStartOf="@+id/progress_circular"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/secondPinView"
            app:layout_constraintVertical_bias="0.34" />

        <ImageView
        android:id="@+id/ivGoBack"
        android:layout_width="107dp"
        android:layout_height="115dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="683dp"
        android:layout_marginEnd="654dp"
        android:layout_marginBottom="226dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/go_back" />

    <ImageView
        android:id="@+id/ivGoHome"
        android:layout_width="108dp"
        android:layout_height="85dp"
        android:layout_marginStart="683dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="885dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/go_home" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>